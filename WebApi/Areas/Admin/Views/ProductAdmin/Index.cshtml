@model WebApi.Models.Product
@{
    Layout = null;
}
<table id="dg2" title="产品列表" class="easyui-datagrid" style="width:100%;height:100%" ;margin:0;
       url="@Url.HttpRouteUrl("DefaultApi", new { controller = "Admin" })"
       method="Get"
       toolbar="#toolbar" pagination="true"
       rownumbers="true" fitColumns="true" singleSelect="true">
    <thead>
        <tr>
            <th field="Id" width="100">主键</th>
            <th field="Name" width="100">产品名</th>
            <th field="Price" width="100">价格</th>
            <th field="ActualCost" width="100">成本</th>
        </tr>
    </thead>
</table>
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newUser()">添加</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUser()">编辑</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyUser()">删除</a>
</div>

<div id="dlg2" class="easyui-dialog" style="width:400px" data-options="closed:true,modal:true,border:'thin',buttons:'#dlg2-buttons'">
    <form id="fm2" method="post" novalidate style="margin:0;padding:20px 50px">
        <h3>产品信息</h3>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.Id, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.Id), style = "width:100%" })
        </div>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.Name, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.Name), style = "width:100%" })
        </div>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.Price, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.Price), style = "width:100%" })
        </div>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.ActualCost, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.ActualCost), style = "width:100%" })
        </div>

    </form>
</div>
<div id="dlg2-buttons">
    <a id="save" href="javascript:void(0)" class="easyui-linkbutton " iconCls="icon-ok" onclick="saveUser()" style="width:90px">确定</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="$('#dlg2').dialog('close')" style="width:90px">取消</a>
</div>

<script type="text/javascript">
    var url="@Url.HttpRouteUrl("DefaultApi", new { controller = "Admin" })";
    function newUser() {
        $('#dlg2').dialog('open').dialog('center').dialog('setTitle', '添加用户');
        $('#fm2').form('clear');
        $("#save").click(function () {
            if (!$("#fm2").form("validate")) return;  //验证
            $.ajax({
                type: "post",
                url: baseUrl,
                data: $("#fm2").serialize(),
                success: function (data) {
                    $('#dlg2').dialog('close');
                    $('#dg2').datagrid('reload');
                },
                error: function (result) {
                    $.messager.show({
                        title: 'Error',
                        msg: result
                    });
                }

            });
        });
    }
    function editUser() {
        var row = $('#dg2').datagrid('getSelected');
        if (row) {
            $('#dlg2').dialog('open').dialog('center').dialog('setTitle', '编辑角色');
            $.get(url, { id: row.Id }, function (data) {
                $('#fm2').form('load', data);
            });
            $("#save").click(function () {
                if (!$("#fm2").form("validate")) return;
                $.ajax({
                    type: "put",
                    url: url + '?id=' + row.Id,
                    data: $("#fm2").serialize(),
                    success: function (data) {
                        $('#dlg2').dialog('close');
                        $('#dg2').datagrid('reload');
                    },
                    error: function (result) {
                        $.messager.show({
                            title: 'Error',
                            msg: result
                        });
                    }
                });
            });
        }
    }

    function destroyUser() {
        var row = $('#dg2').datagrid('getSelected');
        if (row) {
            $.messager.confirm('确认', '你确定要删除？', function (r) {
                if (r) {
                    $.ajax({
                        type: "delete",
                        url: url + "?id=" + row.Id,
                        success: function (data) {
                            $('#dg2').datagrid('reload');
                        },
                        error: function (result) {
                            $.messager.show({
                                title: 'Error',
                                msg: result
                            });
                        }
                    });
                }
            });
        }
    }
</script>
