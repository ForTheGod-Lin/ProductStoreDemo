
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>后台管理系统</title>
   @Styles.Render("~/Content/EasyUICss")
 
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" title="后台管理系统" style="height:130px;background:#B3DFDA;padding:10px;text-align:center">
        <h1>欢迎管理员 @Context.User.Identity.Name 使用后台管理系统</h1>
        <div style="float:right">当前时间 @DateTime.Now.ToString()</div>
    </div>
    <div data-options="region:'west',split:true" title="菜单导航" style="width:180px;padding:10px;">
        <div id="aa" class="easyui-accordion" style="">
            <div title="后台用户系统管理" data-options="iconCls:'icon-edit',selected:true" style="overflow:auto;padding:10px;">
                <p><a href="javascript:void(0)" onclick="userView()">用户管理</a></p>
                <p><a href="javascript:void(0)" onclick="roleView()">角色管理</a></p>
            </div>
            <div title="后台产品系统管理" data-options="iconCls:'icon-edit'" style="padding:10px;">
                <p><a href="javascript:void(0)">产品管理</a></p>
            </div>
        </div>
    </div>
    <div data-options="region:'east',split:true,title:'日历信息'" style="width:240px;padding:10px;">
        <div id="cc" class="easyui-calendar" style="width:180px;height:180px;"></div>
    </div>
    <div data-options="region:'south',border:false" style="height:50px;background:#A9FACD;padding:10px;text-align:center;">
        版权所有：L 
    </div>
    <div id="center" data-options="region:'center'" title="网站首页〉用户管理〉用户列表">
  @Html.Action("Index","UserAdmin")
    </div>

    @Scripts.Render("~/bundles/EasyUI")
    <script>
        $(function () {
          
        })
        function userView() {
            $.get("/Admin/UserAdmin/Index", null, function (data) {
                $("#center").html(data);
                $.parser.parse($("#center"));
            });
        }
        function roleView() {
            $.get("/Admin/RoleAdmin/Index", null, function (data) {
                $("#center").html(data).attr("title","网站首页>角色管理〉角色列表");
                $.parser.parse($("#center"));
            });
        }
    </script>
</body>
</html>