@model WebApi.Models.Product
@{
    Layout = null;
}
<table id="dg"  class="easyui-datagrid" style="width:100%;height:100%" ;margin:0;
       url="@Url.HttpRouteUrl("DefaultApi", new { controller = "Product" })"
       method="Get"
       toolbar="#toolbar" pagination="true"
       rownumbers="true" fitColumns="true" singleSelect="true">
    <thead>
        <tr>
            <th field="Id" width="100">主键</th>
            <th field="Name" width="100">产品名</th>
            <th field="Price" width="100">价格</th>
            <th field="ActualCost" width="100">成本</th>
        </tr>
    </thead>
</table>
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newUser()">添加</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUser()">编辑</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyUser()">删除</a>
</div>

<div id="dlg" class="easyui-dialog" style="width:400px" data-options="closed:true,modal:true,border:'thin',buttons:'#dlg-buttons'">
    <form id="fm" method="post" novalidate style="margin:0;padding:20px 50px">
        <h3>产品信息</h3>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.Name, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.Name), style = "width:100%" })
        </div>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.Price, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.Price), style = "width:100%" })
        </div>
        <div style="margin-bottom:10px">
            @Html.TextBoxFor(model => model.ActualCost, new { @class = "easyui-textbox", required = "true", label = Html.DisplayNameFor(m => m.ActualCost), style = "width:100%" })
        </div>

    </form>
</div>
<div id="dlg-buttons">
    <a id="save" href="javascript:void(0)" class="easyui-linkbutton " iconCls="icon-ok" style="width:90px">确定</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="$('#dlg').dialog('close')" style="width:90px">取消</a>
</div>

<script type="text/javascript">
    var url="@Url.HttpRouteUrl("DefaultApi", new { controller = "Product" })"+"/";
    function newUser() {
        $('#dlg').dialog('open').dialog('center').dialog('setTitle', '添加产品');
        $('#fm').form('clear');
        $("#save").click(function () {
            if (!$("#fm").form("validate")) return;  //验证
            $.ajax({
                type: "Post",
                url: url,
                data: $("#fm").serialize(),
                success: function (data) {
                    $('#dlg').dialog('close');
                    $('#dg').datagrid('reload');
                },
                error: function (jqxhr) {
                    var result = jqxhr.responseJSON
                    $.messager.show({
                        title: 'Error',
                        msg: result.Message
                    });
                }

            });
        });
    }
    function editUser() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('center').dialog('setTitle', '编辑角色');
            $.get(url, { id: row.Id }, function (data) {
                $('#fm').form('load', data);
            });
            $("#save").click(function () {
                if (!$("#fm").form("validate")) return;
                $.ajax({
                    type: "put",
                    url: url + row.Id,
                    data: $("#fm").serialize(),
                    success: function (data) {
                        $('#dlg').dialog('close');
                        $('#dg').datagrid('reload');
                    },
                    error: function (jqxhr) {
                        var result = jqxhr.responseJSON
                        $.messager.show({
                            title: 'Error',
                            msg: result.Message
                        });
                    }
                });
            });
        }
    }


    function destroyUser() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $.messager.confirm('确认', '你确定要删除该产品？', function (r) {
                if (r) {
                    $.ajax({
                        url: url + row.Id,
                        type: "Delete",
                        success: function (data) {
                            $('#dg').datagrid('reload');
                        }
                    }).fail(function (jqxhr) {
                        var result = jqxhr.responseJSON
                        $.messager.show({
                            title: 'Error',
                            msg: result.Message
                        });
                    })
                }
            });
        }
    }
</script>
