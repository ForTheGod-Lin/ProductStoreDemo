@model WebApi.Models.ApplicationUser

@{
    Layout = null;
}



<table id="userGrid"  class="easyui-datagrid" fit="true"
       url="@Url.HttpRouteUrl("DefaultApi", new { controller = "User" })"
       method="Get"
       toolbar="#userToolbar" pagination="true"
       rownumbers="true" fitColumns="true" singleSelect="true">
    <thead>
        <tr>
            <th field="Id" width="100">主键</th>
            <th field="UserName" width="100">用户名</th>
            <th field="PhoneNumber" width="100">手机号</th>
            <th field="PhoneNumberConfirmed" width="100">手机号验证</th>
            <th field="Email" width="100">电子邮箱</th>
            <th field="EmailConfirmed" width="100">邮箱验证</th>
            <th field="StatusString" width="100">账号状态</th>

        </tr>
    </thead>
</table>
<div id="userToolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="userHandler.newUser()">添加</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="userHandler.editUser()">编辑</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="userHandler.destroyUser()">删除</a>
</div>


<script type="text/javascript">
    var userHandler = {};
    userHandler.apiUrl = "@Url.HttpRouteUrl("DefaultApi",new { Controller="User"})" + "/";
    userHandler.url="@Url.Action("UserDialog")"+"/";
    userHandler.newUser = function () {
        createDialog();
        $('#dialog').dialog({
            iconCls: 'icon-save',
            width: 400,
            modal: true,
            href: userHandler.url,
            buttons: [{
                text: '添加',
                iconCls:"icon-ok",
                handler: userHandler.postSave
            },
                {
                    text: '关闭',
                    iconCls:"icon-cancel",
                    handler: function () { $('#dialog').dialog("destroy"); }
                }]
        }).dialog('open').dialog('center').dialog('setTitle', '添加用户');
    };
    userHandler.editUser = function () {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $('#dialog').dialog({
                iconCls: 'icon-save',
                width: 400,
                modal: true,
                href: userHandler.url + row.id,
                buttons: [{
                    text: '添加',
                    iconCls:"icon-ok",
                    handler: function () { putSave(row); }
                }, {
                    text: '关闭',
                    iconCls:"icon-cancel",
                    handler: function () { $('#dialog').dialog("destroy"); }
                }]
            }).dialog('open').dialog('center').dialog('setTitle', '编辑用户');
        }
    }
    userHandler.postSave = function () {
            if (!$("#userFm").form("validate")) return false;
            var data = $("#userFm").serialize();
            $.ajax({
                url:userHandler.apiUrl,
                type: "Post",
                data: data,
                success: function (result) {
                    $('#dialog').dialog('destroy');
                    $('#userGrid').datagrid('reload');
                }
            }).fail(function (jqxhr) {
                var result = jqxhr.responseJSON
                $.messager.show({
                    title: 'Error',
                    msg: result.Message
                });
            });
        }
    userHandler.putSave = function (row) {
            if (!$("#fm").form("validate")) return false;
            var data = $("#fm").serialize();
            $.ajax({
                url: userHandler.apiUrl + row.Id,
                type: "Put",
                data: data,
                success: function (result) {
                    $('#dlg').dialog('close');
                    $('#dg').datagrid('reload');
                }
            }).fail(function (jqxhr) {
                var result = jqxhr.responseJSON
                $.messager.show({
                    title: 'Error',
                    msg: result.Message
                });
            });
        }

    userHandler.destroyUser = function (row) {
            var row = $('#userGrid').datagrid('getSelected');
            if (row) {
                $.messager.confirm('确认', '你确定要删除该用户？', function (r) {
                    if (r) {
                        $.ajax({
                            url: userHandler.apiUrl+ row.Id,
                            type: "Delete",
                            success: function (data) {
                                $('#userGrid').datagrid('reload');
                            }
                        }).fail(function (jqxhr) {
                            var result = jqxhr.responseJSON
                            $.messager.show({
                                title: 'Error',
                                msg: result.Message
                            });
                        })
                    }
                });
            }
        }
</script>
