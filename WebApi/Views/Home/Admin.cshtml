@model WebApi.Models.Product

@{
    ViewBag.Title = "Admin";
}

<h2 class="mt-3">管理产品</h2>

<div class="row">
    <div class="col-9">
        <ul id="update-products" data-bind="foreach:products" class="list-inline">
            <li class="list-inline-item">
                <form >
                    <div class="form-group">
                        <div>Product ID</div> <span data-bind="text: $data.Id"></span>
                    </div>
                    <div class="form-group">
                        <div>Name</div>
                        <input type="text" data-bind="value: $data.Name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <div>Price ($)</div>
                        <input type="text" data-bind="value: $data.Price" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <div>Actual Cost ($)</div>
                        <input type="text" data-bind="value: $data.ActualCost" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <input type="button" value="Update" data-bind="click: $root.update" class="btn btn-primary" />
                        <input type="button" value="Delete Item" data-bind="click: $root.delete" class="btn btn-danger" />
                    </div>
                </form>
            </li>

           
        </ul>
    </div>
    <div class="col-3">
        <h2>增加产品</h2>
        <form id="product" data-bind="submit:add">
            <fieldset>
             
                @Html.EditorForModel()
                <p>
                    <input type="submit" value="Save" class="btn btn-primary mt-2 "/>
                </p>
            </fieldset>
        </form>
    </div>

</div>
@section Scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/knockout-3.5.1.js")"></script>
    <script type="text/javascript">

        function AppViewModel() {
            var self = this;
            self.products = ko.observableArray();
            var baseUrl = "@ViewBag.Url";
            self.loadProducts = function () {
                $.get(baseUrl, null, self.products);
            };
            self.update = function (product) {
                $.ajax({
                    type: "put",
                    url: baseUrl + "/" + product.Id,
                    data: product
                })
            };
            self.delete = function (product) {
                $.ajax({
                    type: "delete",
                    url: baseUrl + "/" + product.Id,
                    success: function (data) { self.loadProducts() },
                    error: function () {
                        alert("cuowu");
                    }
                });
            };
            self.add = function (form) {
                $.ajax({
                    type: "post",
                    url: baseUrl,
                    data: $(form).serialize(),
                    success: self.loadProducts,
                    
                }); 

            };
            self.loadProducts();
        }
        ko.applyBindings(new AppViewModel());
    </script>

}

